{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PageCount</th>
                <th>Author</th>
                <th>ReleaseYear</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.pageCount }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.releaseYear }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
    <a href="{{ path('book_listing_century') }}">Display list by century</a>
    <a href="{{ path('book_listing_author') }}">Display list by author</a>
    <a href="{{ path('book_listing_price') }}">Display list by price</a>
    <a href="{{ path('book_listing_new') }}">Display new books list</a>
{% endblock %}
